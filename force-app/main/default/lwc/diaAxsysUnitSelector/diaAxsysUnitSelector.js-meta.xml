<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>55.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Axsys unit selector</masterLabel>
    <description>Component allowing display and simple selection of the units that the running user is associated with in Axsys</description>
    <targets>
        <target>lightning__FlowScreen</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__FlowScreen">
            <property name="label" type="String" label="Optional label for combobox" role="InputOnly" />
            <property name="selectedUnitNumber" type="String" label="Selected unit number" role="OutputOnly" />
            <property name="selectedUnitName" type="String" label="Selected unit name" role="OutputOnly" />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>