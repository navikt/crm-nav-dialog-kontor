<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>49.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Enhanced text input</masterLabel>
    <description>Text input component that support usage of quick text and autocomplete functionality</description>
    <targets>
        <target>lightning__FlowScreen</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__FlowScreen">
            <property name="inputText" type="String" label="Text input value" role="OutputOnly" />
            <property name="inputTextRich" type="String" label="Text Input" />
            <property name="required" type="Boolean" label="Required" default="false" role="inputOnly" />
            <property name="labelText" type="String" label="Input Label" default="Meldingstekst" role="inputOnly" />
            <property name="defaultRows" type="Integer" label="Number of rows" description="Determines the default height of the input field" default="15" role="inputOnly" />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>